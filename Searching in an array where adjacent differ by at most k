public class basic {
    public static void main(String[] args) {
        int arr[] = {2, 4, 5, 7, 7, 6};
        int k = 2,x=6;
        int size=arr.length-1;
        for(int i=0;i<size;i++){
            int diff=(x-arr[i])/k;
            if(diff==0){
                diff=1;
            }
            if(arr[i+diff]==x){
                System.out.println("num is found at index:"+(i+diff));
                break;
            }
        }
    }
}
